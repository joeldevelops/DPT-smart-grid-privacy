{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "noEmitOnError": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/config/**/*.json"],
  "exclude": ["node_modules", "test"]
}